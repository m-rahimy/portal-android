<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    android:background="@color/ingress_black"
    android:padding="16dp">

    <ImageView
        android:id="@+id/portal_j_location_card_static_image"
        style="@style/imageviews"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/portal_j_location_card_address"
        style="@style/ingress_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="خیابان الف کوچه ب"
        app:layout_constraintLeft_toRightOf="@id/portal_j_location_card_static_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/portal_j_location_card_user"
        style="@style/ingress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="by username"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/portal_j_location_card_address" />

    <View
        android:layout_width="64dp"
        android:layout_height="8dp"
        android:background="#0000"
        app:layout_constraintTop_toBottomOf="@id/portal_j_location_card_user" />
</android.support.constraint.ConstraintLayout>